---
import Badge from '../components/Badge.astro';
import Experience from '../components/Experience.astro';
import SocialPill from '../components/SocialPill.astro';
import GitHubIcon from '../icons/GitHub.astro';
import CodeIcon from '../icons/Code.astro'
import LinkedInIcon from '../icons/LinkedIn.astro';
import MailIcon from "../icons/Mail.astro"
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro'
import "../styles/global.css";
import BriefCase from '../icons/BriefCase.astro';
import Projects from '../components/Projects.astro';
import Contacto from '../components/Contacto.astro';
import Mail from '../icons/Mail.astro';
 ---

<Layout 
    title="Porfolio de Raúl Velásquez - Desarrollador y programador web con más de 5 años de experiencia"
    description="Contrata a Raúl Velásquez para crear tu aplicación empresarial."
>
	<main class="text-white overflow-x-hidden">
        <SectionContainer class="mt-24" id="sobre-mi">
            <div class="size-12 rounded-full bg-blue-100 ">
                <img class=" rounded-full mb-4 object-cover" src="/projects/foto_portfolio.jpg" alt="Foto de Raúl"> 
            </div>
            <h1 class="text-3xl mt-6 lg:text-5xl md:text-4xl font-bold md:flex md:flex-row md:gap-x-4  pg-6 lg:pb-10 items-center">
                ¡Hola! Soy Raúl 
                <div class="flex md:justify-center items-center mt-4 md:mt-0">
                    <a 
                        href="https://www.linkedin.com/in/ra%C3%BAl-vel%C3%A1squez-45b2472b9/"
                        target="_blank"
                        rel="noopener"
                        class="flex items-center transition md:justify-center md:hover:scale-105"
                    >
                        <Badge>Disponible para trabajar</Badge>
                    </a>
                </div>
            </h1>
            <h2 class="text-xl lg:text-2xl text-wrap max-w-[700px] mt-6">
                <span>Soy Ingeniero Industrial y Desarrollador Web con más de 7 años de experiencia </span>
                <span class="opacity-80 text-yellow-200/90">aportando soluciones tecnológicas a problemas empresariales,</span>
                <span>mediante el diseño y desarrollo de aplicaciones</span> 
                <span class="text-red-200/90">funcionales, escalables y centradas en una experiencia de usuario única</span>.
            </h2>


            <nav class="flex gap-4 mt-8 flex-wrap">
                <SocialPill href="https://www.linkedin.com/in/ra%C3%BAl-vel%C3%A1squez-45b2472b9/">
                    <LinkedInIcon class="size-4 md:size-5"/> LinkedIn
                </SocialPill>
                <SocialPill href="https://github.com/raulpinve">
                    <GitHubIcon class="size-4 md:size-5"/> Github
                </SocialPill>
                <SocialPill href="mailto:raulvelasquezpinto@gmail.com">
                    <MailIcon class="size-4 md:size-5"/> raulvelasquezpinto@gmail.com
                </SocialPill>
            </nav>
        </SectionContainer>

        <SectionContainer id="experiencia">
            <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
                <BriefCase class="size-6" />
                Experiencia
            </h2>
            <Experience />
        </SectionContainer>

        <SectionContainer id="proyectos">
            <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
                <CodeIcon class="size-6" />
                Proyectos
            </h2>
            <Projects />
        </SectionContainer>

        <SectionContainer id="contacto">
            <h2 class="text-3xl font-semibold mb-6 flex gap-x-3 items-center">
                <Mail class="size-6" />
                Contáctame
            </h2>
            <Contacto />
        </SectionContainer>
        
    </main>
</Layout>
